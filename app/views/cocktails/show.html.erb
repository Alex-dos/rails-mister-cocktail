<div class="container">
<% if @cocktail.photo.attached?  %>
  <div class="jumbotron text-center" style="background-image: url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>'); background-size: 100%;">
     <% else %>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://source.unsplash.com/300x180/?cocktail');">
    <% end  %>
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

  <div class="container ">

      <h3>Recipe</h3>
      <table class="table table-bordered text-center">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <%= cl_image_tag @cocktail.photo.key,  height: 400, width: 500, crop: :fill if @cocktail.photo.attached? %>
    </div>
    <ul class="d-flex justify-content-end">
      <li><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), :class=>"btn btn-outline-primary" %></li>
      <li><%= link_to "Back to all cocktails", root_path, :class=>"btn btn-outline-secondary" %></li>
      <li><%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <p class="btn btn-outline-danger">Delete</p></li>
                  <% end  %>
    </ul>
  </div>


